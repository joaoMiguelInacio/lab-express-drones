<h2>Update the drone</h2>

<form action="/drones/{{_id}}/edit" method="post">
  <div class="mb-3">
    <label for="name" class="form-label">Name</label>
    <input required maxlength="250" type="text" class="form-control" name="name" value="{{name}}">
  </div>
  <div class="mb-3">
    <label for="propellers" class="form-label">Propellers</label>
    <input required type="text" class="form-control" name="propellers" value="{{propellers}}">
  </div>
  <div class="mb-3">
    <label for="maxSpeed" class="form-label">MaxSpeed</label>
    <input type="text" class="form-control" name="maxSpeed" value="{{maxSpeed}}">
  </div>
  <button class="btn btn-primary" type="submit">Submit</button>
</form>