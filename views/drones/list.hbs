<h2>Available drones</h2>

<table>
  <tr>
    <th>Name</th>
    <th>Propellers</th>
    <th>MaxSpeed</th>
  </tr>
  {{#each drones}}
    <tr>
      <td>{{this.name}}</td>
      <td>{{this.propellers}}</td>
      <td>{{this.maxSpeed}}</td>
      <td><a href="/drones/{{this._id}}/edit">Edit Drone</a></td>
      <td>
          <form action="/drones/{{this._id}}/delete" method="post">
              <button type="submit">Delete Drone</button>
          </form>
      </td>
    </tr>
    {{/each}}
    <tr>
      <td>
        <form action="/drones/create" method="get">
          <button type="submit">Create Drone</button>
        </form>
      </td>
    </tr>
</table>