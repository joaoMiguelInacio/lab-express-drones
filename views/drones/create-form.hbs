<h2>Create a new drone</h2>

<form action="/drones/create" method="post">
  <div class="mb-3">
    <label for="name" class="form-label">Name</label>
    <input required maxlength="250" type="text" class="form-control" name="name">
  </div>
  <div class="mb-3">
    <label for="image" class="form-label">Propellers</label>
    <input required type="text" class="form-control" name="propellers">
  </div>
  <div class="mb-3">
    <label for="Weight" class="form-label">MaxSpeed</label>
    <input type="text" class="form-control" name="maxSpeed">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>