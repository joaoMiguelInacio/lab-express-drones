<h2>Create a new drone</h2>

<form action="/drones/create" method="post">
  <div>
    <label for="name">Name</label>
    <input required maxlength="250" type="text" name="name">
  </div>
  <div>
    <label for="image">Propellers</label>
    <input required type="text" name="propellers">
  </div>

  <div>
    <label for="Weight">MaxSpeed</label>
    <input type="text"name="maxSpeed">
  </div>
  <button type="submit">Submit</button>
</form>